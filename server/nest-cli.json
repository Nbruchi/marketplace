{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "**/*.json" },
      { "include": "src/i18n/**/*", "outDir": "dist/i18n" },
      {
        "include": "modules/mail/templates/**/*",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}