# Application
NODE_ENV=development
PORT=6000
API_PREFIX=api/v1
APP_NAME=Marketplace
APP_URL=http://localhost:6000
CORS_ORIGIN=

# Database (Postgres)
# You can use DATABASE_URL or set host/port/user/pass/name separately.
DATABASE_URL=
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=marketplace_dev

# JWT
JWT_ACCESS_TOKEN_SECRET=replace-this-access-secret
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=replace-this-refresh-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Redis / Bull
REDIS_URL=
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email / SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Stripe (optional)
STRIPE_SECRET=

# Swagger
ENABLE_SWAGGER=true
SWAGGER_PATH=/api/v1/swagger-ui.html

# Misc
LOG_LEVEL=info